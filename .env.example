# API Keys - Thay thế các giá trị bằng API key thực của bạn
NOVITA_API_KEY=your_novita_api_key_here
GOOGLE_API_KEY=your_google_api_key_here  
MISTRAL_API_KEY=your_mistral_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Cấu hình Provider
# Thứ tự ưu tiên của các providers, phân cách bằng dấu phẩy
PROVIDER_PRIORITY=novita,google,mistral,groq,openrouter,cerebras

# Cấu hình Translation
DEFAULT_TARGET_LANG=vi
TRANSLATION_CHUNK_SIZE=1000
TRANSLATION_MAX_LENGTH=4000

# Cấu hình Whisper
WHISPER_MODEL=large-v3           # Các lựa chọn: tiny, base, small, medium, large-v1, large-v2, large-v3
WHISPER_DEVICE=cuda             # Các lựa chọn: cpu, cuda
WHISPER_LANGUAGE=en             # Ngôn ngữ mặc định cho transcription
WHISPER_TASK=transcribe        # Các lựa chọn: transcribe, translate
WHISPER_BATCH_SIZE=16          # Batch size cho xử lý song song
WHISPER_COMPUTE_TYPE=float16   # Các lựa chọn: float32, float16, int8

# Cấu hình GPU
CUDA_VISIBLE_DEVICES=0         # GPU index để sử dụng, có thể là 0,1,2,... cho multi-GPU
GPU_MEMORY_FRACTION=0.8        # Tỷ lệ memory GPU được phép sử dụng (0.0 - 1.0)
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512  # Cấu hình phân bổ memory của PyTorch

# Cấu hình Rate Limiting
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_WINDOW=3600

# Cấu hình Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DIR=logs
MAX_LOG_FILES=10

# Cấu hình Cache
CACHE_DIR=cache
CACHE_EXPIRY_DAYS=7

# Cấu hình Thread
MAX_WORKERS=4

# Cấu hình Memory
MEMORY_THRESHOLD=0.8
MEMORY_CHECK_INTERVAL=5